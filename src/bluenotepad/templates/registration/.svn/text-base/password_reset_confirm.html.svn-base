{% extends "base.html" %}
{% load i18n %}

{% block content %}

<div class="well row">

	<form accept-charset="UTF-8" action="" class="span4 form-horizontal" method="post">
		<fieldset>
		{% csrf_token %}
	 	<input type="hidden" name="next" value="/" />
      		<legend>Wprowadź ponownie swoje hasło</legend>
	
       		<div class="control-group">
          		<label class="control-label" for="id_password1">Hasło:</label>
          		<div class="controls">
				{{ form.password1.errors }}
            			<input id="id_password1" name="new_password1" size="30" type="password" />
          		</div>
       		</div>

        	<div class="control-group">
          		<label class="control-label" for="id_password">Powtórz hasło:</label>
          		<div class="controls">
				{{ form.password2.errors }}
            			<input id="id_password" name="new_password2" size="30" type="password" />
          		</div>
        	</div>
	
	      	<script type="text/javascript">
	      		$("#id_password1").focus();
	    	</script>
	
	        <div class="form-actions">
		    	<input class="btn btn-primary" name="commit" type="submit" value="Zmień hasło" />
	        </div>
      	</fieldset>
	</form>
	
</div>    

{% endblock %}
