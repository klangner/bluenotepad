{% extends "base.html" %}
{% load i18n %}

{% block content %}

<div class="well row">

	<div class="span4 offset1">
        <legend>Zaloguj się z kontem z:</legend>
	    <div style="margin-top:2em"></div>
    	<a href="/facebook/login" class="btn">
	        <img width="180" height="61" alt="Facebook" src="/media/img/facebook-login.png">
        </a>
	</div>

	<div class="loginSeparator span1">
        <span class="separatorText">LUB</span>
    </div>	
 
	<form accept-charset="UTF-8" action="." class="span4 form-horizontal" id="new_user" method="post">
		<fieldset>
		{% csrf_token %}
	 	<input type="hidden" name="next" value="/" />
	      		<legend>Logowanie z naukaslowek.com</legend>
	
	      		<div class="control-group">
		         	<label class="control-label" for="id_username">Nazwa użytkownika:</label>
		         	<div class="controls">
		           		<input id="id_username" name="username" size="30" type="text" value="" />
		         	</div>
	     		</div>
	
	      		<script type="text/javascript">
	      		$("#id_username").focus();
	    		</script>
	
	        		<div class="control-group">
	          		<label class="control-label" for="id_password">Hasło:</label>
	          		<div class="controls">
	            			<input id="id_password" name="password" size="30" type="password" />
	          		</div>
	        		</div>
	
	        		<div class="form-actions">
		          		<input class="btn btn-primary" name="commit" type="submit" value="Logowanie" />
	        		</div>
	          		<p>
	          			Nie masz konta? <a href="{% url registration_register %}">Zarejestruj się</a> |
	          			<a href="{% url auth_password_reset %}">Zapomniałeś hasło?</a>
	          		</p>
	
	      	</fieldset>
	</form>
	
</div>    

{% endblock %}

