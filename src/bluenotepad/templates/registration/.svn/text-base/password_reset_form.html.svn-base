{% extends "base.html" %}
{% load i18n %}

{% block content %}

<div class="well row">

	<h1>Zresetuj hasło</h1>
	<p style="margin-top:2em">
		Zapomniałeś hasła? Podaj swój adres e-mail, a prześlemy Ci instrukcję, jak ustawić nowe hasło.
	</p>

	<div style="margin-top:2em"></div>	
	<div class="">
		{{form.errors}}
	</div>
	<form accept-charset="UTF-8" action="" class="form-horizontal" method="post">
		<fieldset>
			{% csrf_token %}
		 	<input type="hidden" name="next" value="/" />
	
      		<div class="control-group">
	         	<label class="control-label" for="id_email">Adres e-mail:</label>
	         	<div class="controls">
	           		<input id="id_email" name="email" maxlength="75" type="text" />
	         	</div>
     		</div>

      		<script type="text/javascript">
      		$("#id_email").focus();
    		</script>


       		<div class="form-actions">
          		<input class="btn btn-primary" name="commit" type="submit" value="Resetuj hasło" />
       		</div>
   
      	</fieldset>
	</form>
	
</div>    

{% endblock %}
