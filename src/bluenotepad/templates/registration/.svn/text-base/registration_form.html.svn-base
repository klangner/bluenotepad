{% extends "base.html" %}
{% load i18n %}

{% block content %}

<div class="well row">

	<div class="span4 offset1">
        <legend>Zaloguj się z kontem z:</legend>
	    <div style="margin-top:2em"></div>
    	<a href="/facebook/login" class="btn">
	        <img width="180" height="61" alt="Facebook" src="/media/img/facebook-login.png">
        </a>
	</div>

	<div class="loginSeparator span1">
        <span class="separatorText">LUB</span>
    </div>	
	 
	<form accept-charset="UTF-8" action="." class="span4 form-horizontal" id="new_user" method="post">
      	<fieldset>
		{% csrf_token %}
	  	<input type="hidden" name="next" value="/" />
        		<legend>Załóż nowe konto w serwisie</legend>

        		<div class="control-group">
           	<label class="control-label" for="id_username">Nazwa użytkownika:</label>
           	<div class="controls">
				{{ form.username.errors }}
             		<input id="id_username" name="username" size="30" type="text" value="" />
           	</div>
       		</div>

        		<script type="text/javascript">
          		$("#id_username").focus();
        		</script>

        		<div class="control-group">
           	<label class="control-label" for="id_email">E-mail:</label>
           	<div class="controls">
				{{ form.email.errors }}
             		<input id="id_email" name="email" size="75" type="text" value="" />
           	</div>
       		</div>

        		<div class="control-group">
          		<label class="control-label" for="id_password1">Hasło:</label>
          		<div class="controls">
				{{ form.password1.errors }}
            			<input id="id_password1" name="password1" size="30" type="password" />
          		</div>
        		</div>

        		<div class="control-group">
          		<label class="control-label" for="id_password">Powtórz hasło:</label>
          		<div class="controls">
				{{ form.password2.errors }}
            			<input id="id_password" name="password2" size="30" type="password" />
          		</div>
        		</div>

        		<div class="form-actions">
          		<input class="btn btn-primary" name="commit" type="submit" value="Załóż konto" />
        		</div>
          		<p>Masz już konto? <a href="/accounts/login">Zaloguj się</a></p>

      	</fieldset>
	</form>
</div>    
	    

{% endblock %}